<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/rowSearch"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/namaSearchSearch"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="nama Wisata"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/alamatSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="alamat Wisata"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/lokasiGeoSearch"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textColor="@android:color/white"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/namaCuacaSearch"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textColor="@android:color/white"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/descSearch"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textColor="@android:color/white"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/gambarSearch"
                android:layout_width="1dp"
                android:layout_height="1dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>